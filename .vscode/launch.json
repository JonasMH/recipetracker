    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to server",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "recipetracker",
        },
        {
            "name": "Launch server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/cmd/main.go",
            "env": {
                "CGO_CFLAGS": "-O2 -Wno-error"
            }
        }
    ]
}